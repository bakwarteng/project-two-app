{{#each animals as |animal|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <img src="/images/{{animal.filename}}" alt="{{animal.description}}" />
      <h2>{{animal.animal_name}}</h2>
      <h3>{{animal.breed}}</h3>
      <h3>{{animal.age}}</h3>
    </div>
    <div class="col-md-6">
      <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
    </div>
  </div>
{{/each}}