{{#each animals as |animal|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <a href="/animals/{{animal.id}}">
        <img src="/images/{{animal.filename}}" alt="{{animal.description}}" />
      </a>
      <h2>Name: {{animal.animal_name}}</h2>
      <h3>Breed: {{animal.breed}}</h3>
      <h3> Gender:{{animal.gender}}</h3>
      <h3>Age: {{animal.age}}</h3>
    </div>
    {{!-- <div class="col-md-6">
      <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
    </div> --}}
  </div>
{{/each}}